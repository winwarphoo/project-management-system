<br><br>
<div>
  <h2 class="text-center">チーム情報変更</h2>
</div>
<div class="d-flex justify-content-center">
<%= form_with(model: @team, local: true) do |f| %>
  <% if @team.errors.any? %>
    <% @team.errors.full_messages.each do |message| %>
      <p class="fw-bold", style="color:red;"><%= message %></p><br>
    <% end %>
  <% end %>
  <div class="mb-3">
    <%= f.label :name, "チーム名", class: "form-label" %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <%= f.submit "更新", class: "btn btn-primary" %>
  <%= link_to "戻る", :back, class: "btn btn-primary" %>
<% end %>

</div>
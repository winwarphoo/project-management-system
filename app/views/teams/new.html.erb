<div class="mx-auto justify-content-center" style="width: 500px;">
<h1>チーム作成</h1>
<%= form_with(model: @team, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :name, "チーム名", class: "form-label" %><br />
    <%= f.text_field :name, class: "form-control", style: "width:200px" %>
  </div>
  <%= f.submit "作成", class: "btn btn-primary" %>
<% end %>
</div>
<body class="h-100 vstack">
  <!-- navigation bar -->
  <nav id="navbar" class="navbar navbar-expand-lg navbar-dark bg-secondary fixed-top">
  <div class="container">
    <a href="/" class="navbar-brand fs-4">
      プロジェクト管理システム
    </a>
    <!-- toggle button -->
    <button class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
      aria-controls="navbarNav"
      aria-expanded="false"
      aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <!-- link -->
    <div class="collapse navbar-collapse fs-5 text-white" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <%= link_to("ホーム", "/", class: "nav-link text-white" ) %>
        </li>
        <li class="nav-item">
            <%= link_to("チーム", "/teams", class: "nav-link text-white") %>
        </li>
        <li class="nav-item">
          <%= link_to("プロジェクト", "/projects", class: "nav-link text-white") %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to("ログアウト", "/users/sign_out", method: :delete, class: "nav-link text-white", data: {confirm: "本当にログアウトしますか？"}) %>
          </li>
          <li class="nav-item">
            <%= link_to("チーム作成", "/teams/new", class: "nav-link text-white") %>
          </li>
          <li class="nav-item">
            <%= link_to("プロジェクト作成", "/projects/new", class: "nav-link text-white") %>
          </li>
          <li class="nav-item text-white", style="padding-top: 7px">
            <span>ユーザー名:<%= current_user.name %></span>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to("新規登録", "/users/sign_up", class: "nav-link text-white") %>
          </li>
          <li class="nav-item">
            <%= link_to("ログイン", "/users/sign_in", class: "nav-link text-white") %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  </nav>
</body>
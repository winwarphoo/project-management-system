<div class="mx-auto justify-content-center" style="width: 300px;">
<h2 class="text-center">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, "メールアドレス", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "width:250px" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "パスワード", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "width:250px" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, "メールとパスワードを保存する", class:"form-check-label" %><br>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<br><br>
<h1 class="text-center">プロジェクト一覧</h1>
<div class="mx-auto justify-content-center" style="width: 1200px;">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">プロジェクト名</th>
        <th scope="col">プロジェクト内容</th>
        <th scope="col">開始日</th>
        <th scope="col">終了日</th>
        <th scope="col">ステータス</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <th scope="row"><%= project.id %></th>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.start_date.strftime("%Y-%m-%d") %></td>
          <td><%= project.end_date.strftime("%Y-%m-%d") %></td>
          <% if project.end_date > Date.current %>
            <td>作業中</td>
          <% else %>
            <td>完了</td>
          <% end %>
          <td><%= link_to("詳細", "/projects/#{project.id}", class: "btn btn-info btn-sm") %></td>
          <td><%= link_to("編集", "/projects/#{project.id}/edit", class: "btn btn-primary btn-sm") %></td>
          <td><%= link_to("削除", "/projects/#{project.id}", class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "このプロジェクトを削除します。よろしですか？"}) %></td>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="digg_pagination">
    <%= will_paginate @projects %> 
  </div>
</div>